{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Store name",
      "default": "Suplementos Inteligentes"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Combos científicos para saúde integral"
    }
  ]
}
{% endschema %}

<header class="text-center mb-12">
  <div class="floating inline-block mb-4">
    <i class="fas fa-star text-6xl text-neuro"></i>
  </div>
  <h1 class="text-4xl font-bold text-gray-800 mb-2">{{ section.settings.title }}</h1>
  <p class="text-xl text-gray-600">{{ section.settings.subtitle }}</p>
  <div class="w-24 h-1 bg-gradient-to-r from-purple-500 to-pink-500 mx-auto mt-4 rounded-full"></div>
</header>